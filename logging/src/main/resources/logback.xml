<configuration scan="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS}  %-5level %logger{10} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="botstrap.liftweb.Boot" level="INFO"/>
  <logger name="uk.co.randomcoding" level="INFO"/>
  <logger name="uk.co.randomcoding.partsdb.lift.snippet.AddEditDelivery" level="DEBUG"/>
  <logger name="uk.co.randomcoding.partsdb.lift.util.snippet.AvailableLineItemsDisplay" level="DEBUG"/>
  <logger name="uk.co.randomcoding.partsdb.lift.util" level="DEBUG"/>
  

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>