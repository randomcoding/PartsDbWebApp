<configuration scan="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS}  %-5level %logger{10} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="bootstrap.liftweb.Boot" level="INFO"/>
  <logger name="uk.co.randomcoding" level="INFO"/>
  
  <logger name="uk.co.randomcoding.partsdb.lift.snippet.AddEditInvoice" level="DEBUG" />

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>